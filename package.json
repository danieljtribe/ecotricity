{
  "name": "meters",
  "version": "1.0.0",
  "description": "A service to accept and recall meter reads",
  "main": "index.ts",
  "scripts": {
    "pretest": "docker-compose up -d",
    "test": "jest --runInBand --coverage",
    "posttest": "docker-compose down",
    "pretest:watch": "docker-compose up -d && db-migrate up",
    "test:watch": "jest --watchAll --runInBand",
    "posttest:watch": "docker-compose down",
    "tslint": "tslint -c tslint.json './*.ts'",
    "dev": "ts-node-dev --respawn --transpileOnly ./index.ts",
    "build": "tsc",
    "start": "npm run build && node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://danieljtribe@github.com/danieljtribe/ecotricity-hiring.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danieljtribe/ecotricity-hiring/issues"
  },
  "homepage": "https://github.com/danieljtribe/ecotricity-hiring#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@hapi/joi-date": "^2.0.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@types/supertest": "^2.0.8",
    "body-parser": "^1.19.0",
    "crypto": "^1.0.1",
    "db-migrate": "^0.11.6",
    "db-migrate-mysql": "^2.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^25.1.0",
    "promise-mysql": "^4.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.2"
  }
}
